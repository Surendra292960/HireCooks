<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tasks.Activity.UpdateTaskActivity">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:orientation="vertical"
           android:padding="16dp">

           <com.google.android.material.textfield.TextInputLayout
               android:focusable="false"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
               android:background="@drawable/rect_whiteboder"
               android:visibility="visible"
               android:hint="Adrress"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputEditText
                   android:inputType="text"
                   android:id="@+id/address"
                   android:maxLines="3"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               android:focusable="false"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
                android:background="@drawable/rect_whiteboder"
               android:visibility="visible"
               android:hint="Sub Address"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputEditText
                   android:inputType="text"
                   android:id="@+id/subAddress"
                   android:maxLines="1"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:focusable="false"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
                android:background="@drawable/rect_whiteboder"
               android:visibility="visible"
               android:hint="Pincode"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputEditText
                   android:inputType="text"
                   android:id="@+id/pincode"
                   android:maxLines="1"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:focusable="false"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
                android:background="@drawable/rect_whiteboder"
               android:visibility="visible"
               android:hint="House Number"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputEditText
                   android:inputType="text"
                   android:id="@+id/house_number"
                   android:maxLines="1"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:focusable="false"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
                android:background="@drawable/rect_whiteboder"
               android:visibility="visible"
               android:hint="Floor"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputEditText
                   android:inputType="text"
                   android:id="@+id/floor"
                   android:maxLines="1"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:focusable="false"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
                android:background="@drawable/rect_whiteboder"
               android:visibility="visible"
               android:hint="Landmark"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputEditText
                   android:inputType="text"
                   android:id="@+id/landmark"
                   android:maxLines="2"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               android:focusable="false"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
                android:background="@drawable/rect_whiteboder"
               android:visibility="visible"
               android:hint="Location Tag"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputEditText
                   android:inputType="text"
                   android:id="@+id/location_tag"
                   android:maxLines="1"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </com.google.android.material.textfield.TextInputLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/margin_20"
               android:orientation="vertical">

               <Button
                   android:id="@+id/button_update"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Update"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:textAllCaps="true"
                   android:background="@drawable/text_round"
                   android:layout_marginBottom="@dimen/margin_20"/>

               <Button
                   android:id="@+id/button_delete"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Delete"
                   android:allowUndo="true"
                   android:textColor="@color/white"
                   android:textAllCaps="true"
                   android:background="@drawable/text_round" />

           </LinearLayout>

       </LinearLayout>

   </androidx.core.widget.NestedScrollView>

</LinearLayout>