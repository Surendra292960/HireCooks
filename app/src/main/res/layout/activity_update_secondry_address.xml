<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tasks.Activity.UpdateTaskActivity">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:orientation="vertical"
           android:padding="16dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               android:text="Update Address"
               android:textAlignment="center"
               android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

           <EditText
               android:id="@+id/address"
               android:layout_width="match_parent"
               android:layout_height="@dimen/margin_40"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
               android:textSize="@dimen/size_14"
               android:inputType="text"
               android:background="@drawable/round_border_button"
               android:hint="Address" />


           <EditText
               android:id="@+id/subAddress"
               android:layout_width="match_parent"
               android:layout_height="@dimen/margin_40"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
               android:textSize="@dimen/size_14"
               android:inputType="text"
               android:background="@drawable/round_border_button"
               android:hint="Sub Address" />


           <EditText
               android:id="@+id/pincode"
               android:layout_width="match_parent"
               android:layout_height="@dimen/margin_40"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
               android:textSize="@dimen/size_14"
               android:inputType="text"
               android:background="@drawable/round_border_button"
               android:hint="Pincode" />

           <EditText
               android:id="@+id/house_number"
               android:layout_width="match_parent"
               android:layout_height="@dimen/margin_40"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
               android:textSize="@dimen/size_14"
               android:inputType="text"
               android:background="@drawable/round_border_button"
               android:hint="House Number" />

           <EditText
               android:id="@+id/floor"
               android:layout_width="match_parent"
               android:layout_height="@dimen/margin_40"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
               android:textSize="@dimen/size_14"
               android:inputType="text"
               android:background="@drawable/round_border_button"
               android:hint="Floor" />

           <EditText
               android:id="@+id/landmark"
               android:layout_width="match_parent"
               android:layout_height="@dimen/margin_40"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
               android:textSize="@dimen/size_14"
               android:inputType="text"
               android:background="@drawable/round_border_button"
               android:hint="Landmark" />

           <EditText
               android:id="@+id/location_tag"
               android:layout_width="match_parent"
               android:layout_height="@dimen/margin_40"
               android:layout_margin="@dimen/margin_5"
               android:padding="@dimen/margin_10"
               android:textSize="@dimen/size_14"
               android:inputType="text"
               android:background="@drawable/round_border_button"
               android:hint="Location Tag" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="@dimen/margin_20">

               <Button
                   android:id="@+id/button_update"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:layout_margin="5dp"
                   android:text="Update"
                   android:gravity="center"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:elevation="5dp"
                   android:inputType="text"
                   android:textAllCaps="false"
                   android:background="@drawable/rounded"/>

               <Button
                   android:id="@+id/button_delete"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:layout_margin="5dp"
                   android:text="Delete"
                   android:gravity="center"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:elevation="5dp"
                   android:inputType="text"
                   android:textAllCaps="false"
                   android:background="@drawable/rounded"/>

           </LinearLayout>

       </LinearLayout>

   </androidx.core.widget.NestedScrollView>

</LinearLayout>