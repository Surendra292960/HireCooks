<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_margin="@dimen/margin_10"
                android:id="@+id/outgoing_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:layout_gravity="end"
                android:maxWidth="240dp" />

            <LinearLayout
                android:id="@+id/outgoing_info_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingStart="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_30"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:background="@drawable/outgoing_buble">

            <TextView
                android:id="@+id/outgoing_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:maxWidth="240dp" />

            </LinearLayout>


            <TextView
                android:layout_margin="@dimen/margin_10"
                android:id="@+id/incomming_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:layout_gravity="start"
                android:maxWidth="240dp" />

            <LinearLayout
                android:id="@+id/incomming_info_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingStart="@dimen/margin_30"
                android:paddingEnd="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:background="@drawable/incomming_buble">

            <TextView
                android:id="@+id/incomming_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:maxWidth="240dp" />

            </LinearLayout>

        </LinearLayout>
</LinearLayout>