<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_item_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/no_result_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivEmptyStates"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10sp"
                app:srcCompat="@drawable/ic_launcher" />


            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textStyle="normal"
                android:text="@string/no_result_found"
                android:textColor="#848484"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shop_now"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gen_black"
                android:background="@drawable/round_corners"
                android:text="@string/shop_now">

            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.5"
            android:scrollbars="none">

            <LinearLayout
                android:layout_margin="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:id="@+id/idTopLayout">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_margin="@dimen/margin_5"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_margin="@dimen/margin_5"
                                android:text="@string/delivery_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textStyle="normal"
                                android:textAllCaps="true"
                                android:padding="8dp"
                                android:background="@drawable/rzp_border"
                                android:textColor="@color/dark_gray"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                            <LinearLayout
                                android:layout_margin="@dimen/margin_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/editTextAddress"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/size_12"
                                    android:textStyle="normal"
                                    android:textColor="@color/gray_btn_bg_pressed_color"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

                                <TextView
                                    android:id="@+id/editAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:minWidth="0dp"
                                    android:text="EDIT"
                                    android:textSize="@dimen/size_12"
                                    android:textColor="@color/red"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                            </LinearLayout>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Order Summary"
                                android:textAllCaps="true"
                                android:padding="8dp"
                                android:background="@drawable/rzp_border"
                                android:textColor="@color/dark_gray"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                            <LinearLayout
                                android:padding="8dp"
                                android:layout_margin="@dimen/margin_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sub_total"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                    <TextView
                                        android:layout_weight="1"
                                        android:id="@+id/editTextSubTotal"
                                        android:gravity="right"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Rs 00"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/promo"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                    <TextView
                                        android:layout_weight="1"
                                        android:id="@+id/editTextPromo"
                                        android:gravity="right"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Rs 00"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/hirecook_mony"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                    <TextView
                                        android:layout_weight="1"
                                        android:id="@+id/editTextHirecookMoney"
                                        android:gravity="right"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Rs 00"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/delivery_charge"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                    <TextView
                                        android:layout_weight="1"
                                        android:id="@+id/editTextDeliveryCharge"
                                        android:gravity="right"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Rs 00"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                </LinearLayout>

                                <View android:layout_width="match_parent"
                                    android:layout_height="@dimen/view_width_small"
                                    android:background="@color/grey_light"
                                    android:layout_marginTop="8dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/grand_total"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                    <TextView
                                        android:layout_weight="1"
                                        android:id="@+id/editTextGrandTotal"
                                        android:gravity="right"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Rs 00"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_12"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cart_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:layoutAnimation="@anim/layout_animation_fall_down"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:id="@+id/cardlist_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radioPromo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_margin="@dimen/size_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/hirecook_mony"
                                        android:checked="true"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_14"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                </LinearLayout>
                                <View android:layout_width="@dimen/view_width_small"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_light"/>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_margin="@dimen/size_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/promo"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/size_14"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                                </LinearLayout>
                            </LinearLayout>

                        </RadioGroup>

                        <View android:layout_width="match_parent"
                            android:layout_height="@dimen/view_width_small"
                            android:background="@color/grey_light"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <EditText
                                android:layout_weight="0.7"
                                android:id="@+id/apply_promo"
                                android:paddingStart="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="@string/promo_code"
                                android:textSize="@dimen/size_12"
                                android:background="@drawable/round_border_button"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                            <TextView
                                android:layout_weight="1.2"
                                android:id="@+id/promo_buttom"
                                android:paddingStart="10dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:text="@string/apply"
                                android:background="@color/style_color_primary"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_20"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View android:layout_width="match_parent"
                android:layout_height="@dimen/view_width_small"
                android:background="@color/grey_light"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/editTextPayableAmount"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAllCaps="true"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/size_12"
                android:text="@string/payable_rs_00"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:background="@color/gen_white"
                android:textColor="@color/dark_gray"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="2"
            android:elevation="30dp"
            android:background="@color/dark_gray">
            <TextView android:id="@+id/editTextCashOnDelivery"
                android:layout_width="@dimen/margin_50"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gen_white"
                android:text="@string/cash_on_delivery"
                android:textSize="@dimen/size_14"
                android:textAllCaps="true"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

            <TextView android:id="@+id/editTextPayOnline"
                android:layout_width="@dimen/margin_50"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/style_color_primary"
                android:text="@string/buy_now"
                android:textSize="@dimen/size_14"
                android:textAllCaps="true"
                android:textColor="@color/gen_white"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>