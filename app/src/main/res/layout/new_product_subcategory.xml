<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/item_discount"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:text="Save 30%"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:background="@drawable/ribbon_view"
                    android:layout_gravity="left"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp">

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/item_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY" />

                </RelativeLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_gravity="center_vertical"
                   android:weightSum="2">

                   <LinearLayout
                       android:layout_weight="1.8"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:orientation="vertical"
                       android:weightSum="2">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_weight="1">

                           <TextView android:id="@+id/item_name"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/margin_5"
                               android:layout_marginRight="@dimen/margin_5"
                               android:text="Item Name "
                               android:textSize="14sp"
                               android:textStyle="normal"
                               android:textColor="@color/black"/>
                           <TextView android:id="@+id/item_descriptions"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/margin_5"
                               android:layout_marginRight="@dimen/margin_5"
                               android:text="Item descriptions"
                               android:textSize="12sp"/>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:layout_marginTop="@dimen/margin_5"
                           android:layout_marginRight="@dimen/margin_5">

                           <TextView android:id="@+id/item_displayrate"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="14sp"
                               android:text="display rate"
                               android:textStyle="normal"
                               android:textColor="#4CAF50"/>

                           <TextView android:id="@+id/item_sellrate"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="sellrate"
                               android:layout_marginStart="@dimen/margin_20"
                               android:textSize="14sp"
                               android:textStyle="normal"
                               android:textColor="#4CAF50"/>

                       </LinearLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/add_item_layout"
                       android:layout_width="60dp"
                       android:layout_height="30dp"
                       android:layout_marginEnd="20dp"
                       android:layout_weight="0.3"
                       android:gravity="center"
                       android:background="@drawable/round_border_button"
                       android:orientation="vertical">


                       <FrameLayout
                           android:layout_gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <TextView
                               android:id="@+id/add_"
                               android:visibility="visible"
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:text="ADD +"
                               android:textColor="@color/dark_gray"
                               android:textSize="12sp" />


                           <LinearLayout
                               android:id="@+id/quantity_ll"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:orientation="horizontal"
                               android:visibility="gone">

                               <TextView
                                   android:id="@+id/remove_item"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:gravity="center"
                                   android:text="-"
                                   android:textColor="@color/red"
                                   android:textSize="14sp"
                                   android:textStyle="bold" />

                               <TextView
                                   android:id="@+id/item_count"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:gravity="center"
                                   android:paddingLeft="10dp"
                                   android:text="1"
                                   android:textColor="@color/black"
                                   android:textSize="14sp"
                                   android:textStyle="normal" />

                               <TextView
                                   android:id="@+id/add_item"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:gravity="center"
                                   android:paddingLeft="10dp"
                                   android:text="+"
                                   android:textColor="@color/red"
                                   android:textSize="14sp"
                                   android:textStyle="normal" />

                           </LinearLayout>

                           <TextView
                               android:id="@+id/item_not_in_stock"
                               android:visibility="gone"
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:text="Not in Stock"
                               android:textColor="@color/red"
                               android:textSize="12sp" />

                       </FrameLayout>

                   </LinearLayout>

               </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/weight_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>