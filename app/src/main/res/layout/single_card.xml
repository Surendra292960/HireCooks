<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cooks_promotion_lay"
    android:layout_width="280dp"
    android:paddingEnd="@dimen/margin_10"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="0dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true" >

        <FrameLayout
            android:background="@color/smoke_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.test.sample.hirecooks.Libraries.Autoplayvideo.AAH_VideoImage
                android:layout_width="280dp"
                android:layout_height="120dp" />
            <ImageView
                android:id="@+id/crop_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_margin="8dp"
                card_view:srcCompat="@drawable/ic_crop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_playback"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                card_view:srcCompat="@drawable/ic_pause"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/img_vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="8dp"
                card_view:srcCompat="@drawable/ic_unmute"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</LinearLayout>

