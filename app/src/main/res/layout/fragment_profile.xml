<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/appRoot"
    tools:context=".Activity.Users.UserSignInActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/margin_30"
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_20"
            tools:ignore="MissingConstraints">

            <FrameLayout
                android:id="@+id/profile_image_layout"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:backgroundTint="@color/gray_btn_bg_color"
                    android:background="@drawable/ic_profile_user"/>

            </FrameLayout>

            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_design"
                android:hint="@string/user_name"
                android:paddingRight="30dp"
                android:drawablePadding="30dp"
                android:drawableStart="@drawable/ic_profiles"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textSize="@dimen/size_14"
                android:textAlignment="viewStart"
                android:elevation="2dp"/>


            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_design"
                android:hint="@string/email"
                android:paddingRight="30dp"
                android:drawablePadding="30dp"
                android:drawableStart="@drawable/ic_email"
                android:inputType="textEmailAddress"
                android:paddingLeft="30dp"
                android:textSize="@dimen/size_14"
                android:textAlignment="viewStart"
                android:elevation="2dp"/>

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_design"
                android:hint="@string/phone"
                android:inputType="phone"
                android:paddingRight="30dp"
                android:drawablePadding="30dp"
                android:drawableStart="@drawable/ic_phone"
                android:paddingLeft="30dp"
                android:textSize="@dimen/size_14"
                android:textAlignment="viewStart"
                android:imeOptions="actionDone"
                android:elevation="2dp"/>

            <EditText
                android:visibility="gone"
                android:id="@+id/editTextFirmId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_design"
                android:hint="@string/firmid"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textSize="@dimen/size_14"
                android:textAlignment="viewStart"
                android:imeOptions="actionDone"
                android:elevation="2dp"/>

            <EditText
                android:visibility="gone"
                android:id="@+id/editTextUserType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_design"
                android:hint="@string/user_type"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textSize="@dimen/size_14"
                android:textAlignment="viewStart"
                android:imeOptions="actionDone"
                android:elevation="2dp"/>

            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />

            </RadioGroup>

            <TextView
                android:id="@+id/buttonUpdate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="@string/update"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:elevation="5dp"
                android:textAllCaps="true"
                android:background="@drawable/rounded"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>