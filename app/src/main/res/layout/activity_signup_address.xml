<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".MapLocation">


    <LinearLayout
        android:id="@+id/address_lay"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/edit_text_design"
        android:orientation="vertical"
        android:elevation="2dp">

            <LinearLayout
                android:layout_margin="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:id="@+id/location_et"
                    android:hint="@string/location"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_100"
                    android:textSize="@dimen/size_18"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_my_location_black_24dp"/>


                <TextView
                    android:id="@+id/location_saved"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_100"
                    android:textSize="@dimen/size_18"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray"
                    android:drawablePadding="@dimen/margin_20"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/verified"/>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>
