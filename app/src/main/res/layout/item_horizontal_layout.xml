<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- Product Image -->

            <LinearLayout
                android:id="@+id/idLinearLayoutProductImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/margin_80"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <!-- Rest of the product info and add/remove to/from cart symbols -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/idTopLayout">

                <LinearLayout
                    android:layout_weight="1.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="110dp"
                        android:textSize="14sp"
                        android:textColor="@color/gen_black" />

                    <TextView
                        android:id="@+id/item_short_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginStart="110dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="110dp"
                        android:numStars="5"
                        android:rating="4"
                        style="?android:attr/ratingBarStyleSmall"
                        android:theme="@style/RatingBar"/>

                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:layout_marginStart="110dp"
                     android:orientation="horizontal">

                 <TextView
                     android:id="@+id/item_displayrate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="DisplayRate"
                     android:textSize="12sp"
                     tools:textColor="@android:color/darker_gray" />

                 <TextView
                     android:id="@+id/item_sellrate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="SellRate"
                     android:textSize="12sp"
                     android:paddingLeft="@dimen/margin_10"
                     android:textColor="@color/gen_black"  />

             </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="100dp"
                        android:id="@+id/item_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingLeft="@dimen/margin_10"
                        android:textColor="@color/red"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/add_item_layout"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        android:background="@drawable/round_border_button"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/add_"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="ADD +"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/quantity_ll"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/remove_item"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/item_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingLeft="5dp"
                                    android:paddingEnd="5dp"
                                    android:text="1"
                                    android:textColor="@color/gen_black"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/add_item"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingEnd="5dp"
                                    android:text="+"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/item_not_in_stock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Not in Stock"
                                android:textColor="@color/red"
                                android:textSize="12sp"
                                android:visibility="gone" />

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_not_accepting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Order Not Accepting"
                                android:textColor="@color/red"
                                android:textSize="12sp"/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idBottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/idTopLayout">

                <TextView
                    android:id="@+id/item_description"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                   android:text="@string/message_txt"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="@color/gen_black"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingRight="45dip"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/gen_black" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>